@model List<MailingList.Models.Contact>
@{
    ViewData["Title"] = "Contacts Page";

}

<h2>Contact List</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.FirstName</td>
                <td>@contact.LastName</td>
                <td>@contact.Email</td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="" asp-controller="Contacts" asp-action="Create">Add Contact</a>
<br />
<br />
<p>Use '/api/contacts' to access the api for this web app.</p>